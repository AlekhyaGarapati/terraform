pipeline{
    agent { node {label 'agent1'}}
    options {
        ansiColor('xterm')
    }
    stages {
        stage ('init') {
            steps {
                sh '''
                   cd roboshop-infra-standard/01-vpc
                   pwd
                   ls -ltr
                   terraform init
                '''
            }
        }
        stage ('plan') {
            steps {
                sh '''
                   cd roboshop-infra-standard/01-vpc
                   pwd
                   ls -ltr
                   terraform plan
                '''
            }
        }
        stage ('Approve') {
            steps {
                input 'shall i approve'
            }
        }
        stage ('apply') {
            steps {
                sh '''
                   cd roboshop-infra-standard/01-vpc
                   pwd
                   ls -ltr
                   terraform apply -auto-approve
                '''
            }
        }
    }
}